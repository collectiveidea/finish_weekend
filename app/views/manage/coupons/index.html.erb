<%= render "manage/navigation" %>
<%= link_to "Add Coupon Code", new_manage_event_coupon_path(@event), class: 'btn' %>
<ul id="coupon-list">
  <% @event.coupons.each do |coupon| %>
    <li>
      <div class="btn-group pull-right">
        <%= link_to "Edit", edit_manage_event_coupon_path(@event, coupon), class: "btn" %>
        <%= link_to "Delete", manage_event_coupon_path(@event, coupon), method: :delete, class: "btn btn-danger" %>
      </div>
      <%= coupon.code %> - <%= number_to_currency(coupon.amount) %>
    </li>
  <% end %>
</ul>
